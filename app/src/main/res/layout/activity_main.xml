<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main"
    android:layoutDirection="rtl"
    tools:context=".Activity.MainActivity">
    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:local="http://schemas.android.com/apk/res-auto"
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/colorPrimaryDark"
        local:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        local:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:text="حجوزات"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />

    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        android:id="@+id/re"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/a"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textColor="#000000"
            android:id="@+id/order"
            android:background="@drawable/shapeguest"
            android:textSize="19dp"
            android:layout_margin="6dp"
            android:textStyle="bold"
            android:text="حجوزات الزبائن"
            />
    </LinearLayout>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:weightSum="2"
         android:id="@+id/b"
       android:layout_below="@+id/a"
       >
       <Button
           android:layout_width="0dp"
           android:layout_weight="1"
           android:textColor="#ffffff"
           android:layout_margin="6dp"
           android:text="أضافة اعلان جديد"
           android:id="@+id/add"
           android:textSize="19dp"
           android:textStyle="bold"
           android:background="@drawable/shapelogin"
           android:layout_height="70dp" />
       <Button
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_margin="6dp"
           android:text="مسح أعلان"
           android:textSize="19dp"
           android:id="@+id/delete"
           android:textStyle="bold"
           android:background="@drawable/shapeguest"
           android:layout_height="70dp" />
   </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:id="@+id/c"
        android:layout_below="@+id/b"
        >
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:layout_margin="6dp"
            android:id="@+id/addservcies"
            android:text="أضافة خدمة داخل اعلان"
            android:textSize="19dp"
            android:textStyle="bold"
            android:background="@drawable/shape2"
            android:layout_height="70dp" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="6dp"
            android:id="@+id/addstuff"
            android:textColor="#ffffff"
            android:text="أضافة عامل داخل اعلان"
            android:textSize="19dp"
            android:textStyle="bold"
            android:background="@drawable/shaperegester"
            android:layout_height="70dp" />
    </LinearLayout>
    </RelativeLayout>
</RelativeLayout>